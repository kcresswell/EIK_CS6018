<resources>

    <!-- base set of styles that apply to all versions -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:titleTextColor">@color/colorPrimaryDark</item>
        <item name="android:labelTextSize">80sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBar.TitleBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">70sp</item>
        <item name="android:letterSpacing">1.5</item>
        <item name="android:fontFamily">@font/lato_hairline</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:actionBarSize">80dp</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTitle">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:shadowColor">#747474</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.40</item>
        <item name="android:textSize">40sp</item>
        <item name="android:selectable">false</item>
        <item name="android:elevation">12dp</item>
    </style>

    <style name="AccentHeading">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:shadowColor">#747474</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">100</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:textSize">40sp</item>
        <item name="android:selectable">false</item>
        <item name="android:strokeWidth">5</item>
    </style>

</resources>
